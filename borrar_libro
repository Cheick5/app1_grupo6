#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
#include <stdio.h>
#include <libros.h>

void borrar_libro(Libro libros[]) {
    char nombre[50];
    printf("Escriba el nombre del libro a eliminar\n");
    scanf("%s",nombre);

    for (int i = 0; i < 6; ++i) {
        if (strcmp(libros[i].titulo,nombre)==0){
            libros[i].to_delete=1;
        }
    }
    printf("Accion realizada\n");    
}
